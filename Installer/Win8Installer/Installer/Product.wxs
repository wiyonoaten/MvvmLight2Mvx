                <Condition Level="0">NOT VS11EXISTS AND NOT VS11XEXISTS</Condition>
            </Feature>

            <Feature Id="TemplatesVS11"
                     Title="VS11 Templates"
                     Level="1"
                     Description="Project Templates for Visual Studio 11 (full version).">
