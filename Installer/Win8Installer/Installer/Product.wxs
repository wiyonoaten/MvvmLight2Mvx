                <ComponentRef Id="Vs11ProjectTemplatesCsMetroMvvmWin8Comp" />
            </Feature>

            <Feature Id="TemplatesVS11x"
                     Level="1"
                     Title="VS11 Express templates"
                     Description="Project Templates for Visual Studio 2011 (express)">
