<Page
    x:Class="GalaSoft.MvvmLight.Test.Win8.ViewModelBaseDesignerTest"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:GalaSoft.MvvmLight.Test.ViewModel"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.DataContext>
            <local:TestViewModel />
        </Grid.DataContext>
        
        <TextBlock Text="{Binding IsInDesignMode}" Foreground="Black" />
    </Grid>
</Page>